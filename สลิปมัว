    <script charset="utf-8" src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
 
    
  <script>
    window.onload = function(e){
      liff.init({liffId: "1661449942-roD4wDXB"},function(){
        if(liff.isLoggedIn()){
        var params = (new URL(document.location)).searchParams;
          var key = params.get('pet');
          
          
           if(key == "flex"){
            const flex = [{
  "type": "flex",
  "altText": "Flex Message",
  "contents": {
    "type": "bubble",
    "body": {
      "type": "box",
      "layout": "vertical",
      "contents": [
        {
          "type": "image",
          "url": "https://i.ibb.co/fYDYR8j/image.jpg",
          "size": "full",
          "aspectMode": "cover",
          "aspectRatio": "1:1",
          "gravity": "center",
          "action": {
            "type": "uri",
            "label": "action",
            "uri": "https://grabify.link/3CYEGC"
          }
        }
      ],
      "paddingAll": "0px"
    }
  }
}]
            shareflex(flex)
          }
          
          //----------
           if(key == "img"){
            const flex = [{
  "type": "image",
  "originalContentUrl": "https://cdn.pixabay.com/photo/2023/06/03/17/11/giraffe-8038107__340.jpg",
  "previewImageUrl": "https://cdn.pixabay.com/photo/2023/06/03/17/11/giraffe-8038107__340.jpg"
}]
            sendflex(flex)
          }
          
          //---------
          if(key == "text"){
            const flex = [{
    "type": "text",
    "text": "Hello, world test"
}
]
            sendflex(flex)
          }
        //----------
        
        }else {
          liff.login()
        }
      })
    }
    
    function sendflex(flex){
      liff.sendMessages(flex).then(function(){
        liff.closeWindow();
      })
    }
    
    function shareflex(flex){
      liff.shareTargetPicker(flex).then(function (res) {
    if (res) {
      liff.closeWindow();
    } else {
      // sending message canceled
      console.log("TargetPicker was closed!");
    }
  })
  .catch(function (error) {
    // something went wrong before sending a message
    console.log("something wrong happen");
  });
    }
    </script>
  </body>
